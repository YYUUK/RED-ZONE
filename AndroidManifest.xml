<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.geovengers.redzone">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:networkSecurityConfig="@xml/network_security_config"
        android:allowBackup="true"
        android:icon="@mipmap/ic_redzone"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_redzone"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="4a7b562541a6b112c5957064d013e435"/>

        <activity android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity">
        </activity>
        <activity android:name=".set_filter"
            android:launchMode="singleTop"></activity>
        <activity android:name=".region_select"
            android:launchMode="singleTop"></activity>
        <activity android:name=".message_list"
            android:launchMode="singleTop"></activity>
        <activity android:name=".pie_chart"
            android:launchMode="singleTop"></activity>
        <activity android:name=".disaster_select"
            android:launchMode="singleTop"></activity>
        <activity android:name=".Notice"
            android:launchMode="singleTop"></activity>
    </application>

</manifest>
